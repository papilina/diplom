@using MVC.ViewModels
@using MVC.Models
@model IndexEventsViewModel
@{
    ViewData["Title"] = "Events";
}

<h2>Афиша</h2>

<div class="row">
    <div class="col-md-12">
        <form class="form-inline" asp-action="Find">
            <div class="form-group">
                <label class="control-label">Тип мероприятия</label>
                <select class="form-control" asp-items="@(new SelectList(Model.PlaceTypes, "Id","Name"))" asp-for="PlacetypeId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Районы</label>
                <select class="form-control" asp-items="@(new SelectList(Model.Areas, "Id","Name"))" asp-for="AreaId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Открыт сейчас</label>
                <input class="form-control" type="checkbox" style="width:33px; height:33px;" asp-for="OpenNow"/>
            </div>
            <button type="submit" class="btn btn-primary">Найти</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="IndexPlaceInArea">
            <div class="form-group">
                <label class="control-label">Район</label>
                <select name="areaId" class="form-control">
                    @foreach (var item in Model.Areas)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                @foreach (PlaceType p in Model.PlaceTypes)
                {
                    <button type="submit" class="btn btn-primary btn-circle" value="@p.Id" name="placetypeId">@p.Name</button>
                }
            </div>
        </form>
    </div>
</div>
