@model MVC.Models.Feedback

@{
    ViewData["Title"] = "Delete";
}

<h2>Удалить</h2>

<h3>Подтвердить удаление?</h3>
<div>
    <h4>Отзыв</h4>
    <hr />
    <dl>
        <dt>Дата</dt>
        <dd>
            @Html.DisplayFor(model => model.DateFeedback)
        </dd>
        <dt>Текст</dt>
        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt>Пользователь</dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt>Место</dt>
        <dd>
            @Html.DisplayFor(model => model.Place.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
