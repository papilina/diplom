@model MVC.Models.Place

@{
    ViewData["Title"] = "Delete";
}

<h2>Удалить</h2>

<h3>Подтвердить удаление?</h3>
<div>
    <h4>Место</h4>
    <hr />
    <dl>
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Адрес</dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>Сайт</dt>
        <dd>
            @Html.DisplayFor(model => model.Site)
        </dd>
        <dt>Место</dt>
        <dd>
            @Html.DisplayFor(model => model.PlaceType.Name)
        </dd>
        <dt>Район</dt>
        <dd>
            @Html.DisplayFor(model => model.Area.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
