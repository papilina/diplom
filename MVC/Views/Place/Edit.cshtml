@model MVC.Models.Place

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменить</h2>

<h4>Место</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Адрес</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Сайт</label>
                <input asp-for="Site" class="form-control" />
                <span asp-validation-for="Site" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Тип места</label>
                <select asp-for="PlaceTypeId" class="form-control" asp-items="ViewBag.PlaceTypes"></select>
                <span asp-validation-for="PlaceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Район</label>
                <select asp-for="AreaId" class="form-control" asp-items="ViewBag.Areas"></select>
                <span asp-validation-for="AreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Начало работы</label>
                <input asp-for="StartWork" class="form-control"  type="time"/>
                <span asp-validation-for="StartWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Конец работы</label>
                <input asp-for="EndWork" class="form-control" type="time" />
                <span asp-validation-for="EndWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Телефон</label>
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
