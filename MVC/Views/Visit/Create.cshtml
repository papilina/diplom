@model MVC.Models.Visit

@{
    ViewData["Title"] = "Create";
}

<h2>Создать</h2>

<h4>Посещение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Дата</label>
                <input asp-for="DateVisit" class="form-control" type="date" />
                <span asp-validation-for="DateVisit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Пользователь</label>
                @Html.DropDownList("UserId", ViewBag.Users, "Выберите пользователя",
                    htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Место</label>
                @Html.DropDownList("PlaceId", ViewBag.Places, "Выберите место",
                                               htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="PlaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
